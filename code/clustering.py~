import numpy as np
import pandas as pd

import nltk
from nltk.stem import WordNetLemmatizer
import spacy

import os
#os.chdir('./project')

meta = pd.read_csv('kaggle/CORD-19-research-challenge/metadata.csv')

abstracts = meta.abstract


# Lemmatizing
lemmatizer = WordNetLemmatizer()
wnl = lemmatizer.lemmatize(abstracts[0])

nlp = spacy.load('en')

doc = nlp(str(abstracts[0]))


doc2 = nlp(''.join([token.lemma_ for token in doc]))

print(doc.vector_norm)

print(doc2.vector_norm)


